{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "DOM"
      ],
      "target": "ESNext",
      "module": "ESNext",
      "baseUrl": ".",
      "moduleResolution": "node",
      "strict": true,
      "rootDir": "src",
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true
   }
}